body{min-width: 1024px;}
.header-top{display: none;}
.header-bottom{display: none;}
.bg{width: 100%;height: 100%;background: url(../image/login-bg.jpg) no-repeat center;min-height: 800px;/*margin-top: 44px;*/opacity: 0.9;}
.login-page{position: absolute;top: 40%;left: 20%;width: 60%;}
.login-page div{text-align: center;width: 50%;margin: 0 25%;}
#load_form{}
.login-list{border-bottom-left-radius: 5px;border-bottom-right-radius: 5px;background: rgba(255,255,255,0.6);padding: 10px;border-top: 1px solid #CCCCCC;overflow: hidden;}
.login-list li{position: relative;}
.login-list input{padding-left:10px;font-size: 16px;font-weight: 400;letter-spacing: normal;color: #333;outline: none;}
.login-list a{display: inline-block;float: right;color: #a0a0a0;}
.login-list label{color: #E4393C;font-size: 12px;display: inline-block;height: 15px;line-height: 15px;width: 100%;}
.login-list .login-sub{width: 45%;}
.page-check{width: 100%;height: 35px;line-height: 35px;font-size: 20px;font-family: cursive;background: rgba(0,0,0,0.3);border-top-left-radius: 5px;border-top-right-radius: 5px;}
.page-check span{display: inline-block;width: 50%;text-align: center;float: left;cursor: pointer;}
.page-check .check-list-lf{border-top-left-radius: 5px;}
.page-check .check-list-rt{border-top-right-radius: 5px;}
.page-check .oncheck{background: rgba(255,255,255,0.8);}
.register{display: none;}
